{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"typeRoots": ["src/types", "node_modules/@types"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
