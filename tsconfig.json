{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@config/*": ["config/*"],
			"@modules/*": ["modules/*"],
			"@shared/*": ["shared/*"],
			"@app": ["app.ts"]
		}
	},
	"include": ["src", "tests"],
	"typeRoots": ["src/types", "node_modules/@types"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
