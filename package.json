{
  "name": "fastify-ts-starter",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --watch src src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node ./dist/index.js",
    "lint": "biome lint ./src --fix",
    "format": "biome format ./src --fix",
    "test": "jest --passWithNoTests",
    "test:view": "npx majestic",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "biome check --apply",
      "git add"
    ],
    "*.{ts,tsx}": [
      "jest --bail --findRelatedTests"
    ]
  },
  "author": "Luis Sarabia",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/helmet": "^13.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "axios": "^1.10.0",
    "dotenv": "^17.0.0",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.1",
    "pino": "^9.7.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/jest": "^30.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.0.7",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}